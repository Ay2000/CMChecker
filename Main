bool IsJump(int CMCheckersBoard[MAX_ARRAY_SIZE][MAX_ARRAY_SIZE], int numRowsInBoard, int player, int xLoc, int yLoc) {
	
	if (CMCheckersBoard[xLoc][yLoc] == WHITEKING) {
			if (CMCheckersBoard[(xLoc + 1) % numRowsInBoard][(yLoc - 1) % numRowsInBoard] >= 4 && CMCheckersBoard[(xLoc + 1) % numRowsInBoard][(yLoc - 1) % numRowsInBoard] <= 6)
				if (CMCheckersBoard[(xLoc + 2) % numRowsInBoard][(yLoc - 2) % numRowsInBoard] == 0)
					return true;

			if (CMCheckersBoard[(xLoc - 1) % numRowsInBoard][(yLoc - 1) % numRowsInBoard] >= 4 && CMCheckersBoard[(xLoc - 1) % numRowsInBoard][(yLoc - 1) % numRowsInBoard] <= 6)
				if (CMCheckersBoard[(xLoc - 2) % numRowsInBoard][(yLoc - 2) % numRowsInBoard] == 0)
					return true;
	}
		
	if (CMCheckersBoard[(xLoc + 1) % numRowsInBoard][(yLoc + 1) % numRowsInBoard] >= 4 && CMCheckersBoard[(xLoc + 1) % numRowsInBoard][(yLoc + 1) % numRowsInBoard] <= 6)
			if (CMCheckersBoard[(xLoc + 2) % numRowsInBoard][(yLoc + 2) % numRowsInBoard] == 0)
				return true;

	if (CMCheckersBoard[(xLoc - 1) % numRowsInBoard][(yLoc + 1) % numRowsInBoard] >= 4 && CMCheckersBoard[(xLoc - 1) % numRowsInBoard][(yLoc + 1) % numRowsInBoard] <= 6)
			if (CMCheckersBoard[(xLoc - 2) % numRowsInBoard][(yLoc + 2) % numRowsInBoard] == 0)
				return true;

	return false;
}

bool CheckJump(int CMCheckersBoard[MAX_ARRAY_SIZE][MAX_ARRAY_SIZE], int numRowsInBoard, int player, int xLoc, int yLoc, int xDirection, int yDirection) {
	if (player == WHITEPLAYER)
		if (CMCheckersBoard[(xLoc + xDirection) % numRowsInBoard][(yLoc + yDirection) % numRowsInBoard] == REDSOLDIER || CMCheckersBoard[(xLoc + xDirection) % numRowsInBoard][(yLoc + yDirection) % numRowsInBoard] == REDMULE || CMCheckersBoard[(xLoc + xDirection) % numRowsInBoard][(yLoc + yDirection) % numRowsInBoard] == REDKING)
			if (CMCheckersBoard[(xLoc + 2 * xDirection) % numRowsInBoard][(yLoc + 2 * yDirection) % numRowsInBoard] == NOPLAYER)
				return true;

	if (player == REDPLAYER)
		if (CMCheckersBoard[(xLoc + xDirection) % numRowsInBoard][(yLoc - yDirection) % numRowsInBoard] == WHITESOLDIER || CMCheckersBoard[(xLoc + xDirection) % numRowsInBoard][(yLoc - yDirection) % numRowsInBoard] == WHITEMULE || CMCheckersBoard[(xLoc + xDirection) % numRowsInBoard][(yLoc - yDirection) % numRowsInBoard] == WHITEKING)
			if (CMCheckersBoard[(xLoc + 2 * xDirection) % numRowsInBoard][(yLoc - 2 * yDirection) % numRowsInBoard] == NOPLAYER)
				return true;

	return false;
}

